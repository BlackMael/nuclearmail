{
  "name": "react-browserify-template",
  "version": "0.0.1",
  "description": "Quick boilerplate for browserify and React modules.",
  "main": "App.js",
  "dependencies": {
    "asap": "^1.0.0",
    "immutable": "^2.0.3",
    "react": "~0.11"
  },
  "devDependencies": {
    "autoprefixer": "~2",
    "browserify": "~2",
    "catw": "~0.2.0",
    "del": "^0.1.1",
    "envify": "~0.2.0",
    "gulp": "^3.8.7",
    "gulp-autoprefixer": "0.0.8",
    "gulp-browserify": "^0.5.0",
    "gulp-concat": "^2.3.4",
    "gulp-less": "^1.3.3",
    "gulp-livereload": "^2.1.0",
    "gulp-size": "^1.0.0",
    "gulp-sourcemaps": "^1.1.0",
    "gulp-watch": "^0.6.9",
    "gulp-webserver": "^0.4.0",
    "less": "~1",
    "reactify": "~0.14.0",
    "statics": "~0.1.0",
    "uglifyjs": "~2",
    "vinyl-source-stream": "^0.1.1",
    "watchify": "~0.10"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc - ' 'style/*.less' -o static/bundle.css -v",
    "watch-js": "STATIC_ROOT=./static watchify -o static/bundle.js -v -d .",
    "watch": "npm run watch-js & npm run watch-css",
    "build-css": "catw -c 'lessc -' 'style/*.less' > static/bundle.css",
    "build-js": "STATIC_ROOT=./static NODE_ENV=production browserify . | uglifyjs -cm > static/bundle.js",
    "build": "npm run build-css && npm run build-js",
    "collect-static": "collect-static . ./static",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Pete Hunt",
  "license": "Apache 2"
}
